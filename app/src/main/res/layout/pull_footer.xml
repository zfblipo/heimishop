<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/pull_footer_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/main_text9"
        android:layout_centerVertical="true"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:visibility="gone"/>
    
    <LinearLayout
        android:id="@+id/pull_footer_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/pull_footer_progress"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/progress_icon" />

        <TextView
            android:id="@+id/pull_footer_text"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="加载更多..."
            android:background="@color/main_bg"
            android:textColor="@color/main_text9"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>